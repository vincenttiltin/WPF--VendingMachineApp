<Window x:Class="PIIIProject.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject"
        mc:Ignorable="d"
        Title="Vendig Machine Receipt" Height="500" Width="350" ResizeMode="NoResize">
    <StackPanel Margin="0,16,0,0">
        <TextBox TextWrapping="Wrap"  Width="264" Height="361" x:Name="txbReceipt" />
        <Label Content="Select Bill:"/>
        <StackPanel x:Name="stkRadioButtons" Orientation="Horizontal">
            <RadioButton Margin="35,5,5,5" Content="5.00"></RadioButton>
            <RadioButton Margin="5,5,5,5" Content="10.00"></RadioButton>
            <RadioButton Margin="5,5,5,5" Content="20.00"></RadioButton>
            <RadioButton Margin="5,5,5,5" Content="50.00"></RadioButton>
            <RadioButton Margin="5,5,5,5" Content="100.00"></RadioButton>
            
        </StackPanel>
        <Button Width="100" Margin="0,5,0,0" Content="Show Receipt" x:Name="btnShowReceipt" Click="btnShowReceipt_Click"/>
       
    </StackPanel>
</Window>
